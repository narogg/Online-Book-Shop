<h2>Listing orders</h2>
<div class="table-responsive">
<table class="table table-bordered table-hover">
  <thead>
    <tr class="success">
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
	  <th>Placed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
		<td><%= order.created_at.strftime("%d.%m.%Y. %H:%M:%S") %></td>
        <td><%= link_to 'Show', order, :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_order_path(order), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Destroy', order, :class => 'btn btn-default btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%#= link_to 'New Order', new_order_path %>
<p><%= will_paginate @orders %></p>

